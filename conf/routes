# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                     controllers.SicsthSense.index()
# Things management
GET        /things              controllers.SicsthSense.things()
POST       /things/register      controllers.SicsthSense.registerThing(id: String, url: String)
GET        /things/:id           controllers.SicsthSense.getThing(id: String)
GET        /things/:id/url       controllers.SicsthSense.getThingUrl(id: String)
DELETE     /things/:id           controllers.SicsthSense.removeThing(id: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file         controllers.Assets.at(path="/public", file)
